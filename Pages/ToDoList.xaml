<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:StudentOrganiser"
             x:Class="StudentOrganiser.Pages.ToDoList">

    <ContentPage.Resources>

    </ContentPage.Resources>

    <Grid RowDefinitions="50, *, 50" ColumnDefinitions="*">
        <Label Text="To do list" Background="Blue" Grid.Row="0" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="30"></Label>
        <VerticalStackLayout Spacing="15" Padding="20" x:Name="allTasks" Grid.Row="1">


        </VerticalStackLayout>
        <Button x:Name = "AddTask"
                Text="+"
                HorizontalOptions="End"
                VerticalOptions="End"
                Grid.Row="2"
                />

    </Grid>

</ContentPage>
