<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentOrganiser.Pages.CampusMap"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps">
    
    <Grid RowDefinitions="0.5*, 50, 5*, *" RowSpacing="10">
        <Label Text="Campus Map" Background="Blue" Grid.Row="0" TextColor="White" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="30"></Label>
        <Border Stroke="black" StrokeThickness="2" Grid.Row="1">
            <Picker x:Name="allLocations" Title="Select a location" SelectedIndexChanged="LocationSelected"></Picker>
        </Border>
        <VerticalStackLayout Grid.Row="2" x:Name="MapLayout">
        
        </VerticalStackLayout>
        <Border Grid.Row="3" Stroke="Black" HorizontalOptions="Center" VerticalOptions="Center">
            <Label x:Name="navInfo" Text="No destination selected" FontSize="20" BackgroundColor="LightGray" Padding="20"></Label>
        </Border>
        
    </Grid>

</ContentPage>