<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentOrganiser.Pages.CampusMap"
             xmlns:maps="http://schemas.microsoft.com/dotnet/2021/maui/maps"
             Title="CampusMap">
    <Grid RowDefinitions="50, 5*, *" RowSpacing="10">
        <Picker x:Name="allLocations" Grid.Row="0" Title="Select a location" SelectedIndexChanged="LocationSelected"></Picker>
        <VerticalStackLayout Grid.Row="1" x:Name="MapLayout">
        
        </VerticalStackLayout>
        <Border Grid.Row="2" Stroke="Black" HorizontalOptions="Center" VerticalOptions="Center">
            <Label x:Name="navInfo" Text="No destination selected" FontSize="20" BackgroundColor="LightGray" Padding="20"></Label>
        </Border>
        
    </Grid>

</ContentPage>